mixin dynamicList(title, items)
    ul
        h3=title
        each item in items
            li=item

mixin imagePNG(name)
  img(src=`../image/${name}.png`, alt=`${name}`, class=`${name}`)

mixin imageJPEG(name)
  img(src=`../image/${name}.jpeg`, alt=`${name}`, class=`${name}`)


mixin link(name)
    a(href="#", target="_blank", rel="noopener noreferrer")=name

mixin linkLogo(name)
    a(href="#", target="_blank", rel="noopener noreferrer")
        img(src=`../image/${name}.png`, alt=`${name}`, class=`${name}`)

mixin spotlightCard(picture, title, context)
  .spotlight__card
    img(src=`../image/${picture}.jpeg`, alt=`${picture}`, class=`${picture}`)
    .spotlight__card__body
      h3.spotlight__card__title=title
      p.spotlight__card__context=context

mixin odmSpotlightCard(picture, title, context)
    img(src=`../image/${picture}.jpeg`, alt=`${picture}`, class=`${picture}`)
    .odmSpotlight__card__body
      h3.odmSpotlight__card__title=title
      p.odmSpotlight__card__context=context

mixin smartCard(picture, title)
  img(src=`../image/${picture}.png`, alt=`${picture}`, class=`${picture}`)
  .featureOfSmartList__product
    h3.featureOfSmartList__title=title